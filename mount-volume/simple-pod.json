  "metadata": {
    "name": "simple-pod",
    "creationTimestamp": null,
    "labels": {
      "name": "simple-pod"
    }
  },
  "spec": {
    "containers": [
      {
        "name": "simple-pod",
        "image": "registry.devshift.net/che/centos_jdk8",
        "ports": [
